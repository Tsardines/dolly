  /*---------- Middle Third ---------- */

.middle-third
  border: 15px double turquoise
  border-left: none
  border-right: none
  border-top: none

.about
  transform: skewX(5deg)

.about p
  border: 20px double black
  border-radius: 0.5em

.my-face
  border: 1px solid black
  border-radius: 0.15em

.tech-list li:hover
  color: turquoise




  /*---------- Bottom Third ---------- */

.projects-cont
  background-color: turquoise
  border-bottom: 2em solid #566
  border-radius: 1em
  border-top: 2em solid #566

.projects-cont img
  border: 15px double white
  border-radius: 1.25em
  transform: skewX(1.5deg)

.projects-cont img:hover
  filter: blur(0.15em) sepia(65%)
  -webkit-transition: 0.5s -webkit-filter linear
  -moz-transition: 0.5s -moz-filter linear
  -moz-transition: 0.5s filter linear
  -ms-transition: 0.5s -ms-filter linear
  -o-transition: 0.5s -o-filter linear
  transition: 0.5s filter linear, 0.5s -webkit-filter linear

.ul-class li
  position: relative

.proj-info
  font-size: 1.75em
  left: 2em
  position: absolute
  top: 5em
  width: 20%

.footer-ul li a
  color: black

.footer-ul li a:hover
  color: turquoise

.copy-p
  background-color: turquoise
  border-top: 15px double yellow
