  /*---------- Main Container ---------- */

.main-container
  margin: 0 auto

/*---------- Nav ---------- */

.nav-ul
  background-color: turquoise
  display: inline-block
  height: 8em
  list-style-type: none
  margin-top: 0
  text-decoration: underline

.nav-ul li
  text-shadow: 1px 1px white

.nav-ul li:hover
  color: pink
  text-shadow: 2px 2px black

.nav-triangle
  background-color: turquoise

  /*---------- Top Third ---------- */

.name-span, .headline-span, .line-one, .line-three
  font-family: 'Yellowtail', cursive

.name-span
  color: turquoise
  text-shadow: 4px 2.5px 2.5px black






    /*---------- Headline ---------- */

